<!-- views/user.ejs -->
<!DOCTYPE html>
<html>
<head>
    <title>User Information</title>
</head>
<body>
    <h1>User Information</h1>
    <p><strong>Name:</strong> <%= user.name %></p>
    <p><strong>Age:</strong> <%= user.age %></p>
    <p><strong>Email:</strong> <%= user.email %></p>
    <h3>Hobbies:</h3>
    <ul>
        <% user.hobbies.forEach(hobby => { %>
            <li><%= hobby %></li>
        <% }); %>
    </ul>
</body>
</html>